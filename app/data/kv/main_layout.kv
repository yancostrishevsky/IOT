#:import c kivy.utils.get_color_from_hex


<WindowManager>:
    canvas.before:
        Color:
            rgba: (1, 1, 1, 1)

        Rectangle:
            size: self.size
            pos: self.pos

<MenuButton>:
    size_hint: (1, None)
    height: self.width / 4
    background_color: (0, 0, 0, 0)
    font_size: self.height / 3
    color: c("#CCCCCC")
    always_release: True

    on_press: self.opacity -= 0.2
    on_release: self.opacity += 0.2

    canvas.before:

        Color:
            rgba: c("#0e756c")

        RoundedRectangle:
            size: self.size
            pos: self.pos
            radius: (self.width / 7,)

<BackButton@Button>:
    background_color: (0, 0, 0, 0)
    size_hint: (0.15, None)
    height: self.width
    color: c("#CCCCCC")
    always_release: True

    on_press: self.opacity -= 0.2
    on_release: self.opacity += 0.2

    canvas.before:
        Color:
            rgba: c("#0e756c")

        Ellipse:
            angle_start: 0
            angle_end: 360
            size: self.size
            pos: self.pos

    Image:
        source: app.directory + "/data/textures/back_icon.png"
        size: (root.width / 1.5, root.height / 1.5)
        pos: (root.x + root.width / 2 - root.width / 1.5 / 2, root.y + root.height / 2 - root.height / 1.5 / 2)


<MoreButton@Button>:
    background_color: (0, 0, 0, 0)
    size_hint: (0.15, None)
    height: self.width
    color: c("#CCCCCC")
    always_release: True

    on_press: self.opacity -= 0.2
    on_release: self.opacity += 0.2

    canvas.before:
        Color:
            rgba: c("#0e756c")

        Ellipse:
            angle_start: 0
            angle_end: 360
            size: self.size
            pos: self.pos

        Color:
            rgba: c("#0b6443")
        Line:
            ellipse: self.x, self.y, self.width, self.height
            width: 1



    Image:
        source: app.directory + "/data/textures/more_icon.png"
        size: (root.width / 2, root.height / 2)
        pos: (root.x + root.width / 2 - root.width / 2 / 2, root.y + root.height / 2 - root.height / 2 / 2)

<ApproveButton@Button>:
    background_color: (0, 0, 0, 0)
    size_hint: (0.15, None)
    height: self.width
    color: c("#CCCCCC")
    always_release: True

    on_press: self.opacity -= 0.2
    on_release: self.opacity += 0.2

    canvas.before:
        Color:
            rgba: c("#0e756c")

        Ellipse:
            angle_start: 0
            angle_end: 360
            size: self.size
            pos: self.pos

    Image:
        source: app.directory + "/data/textures/approve_icon.png"
        size: (root.width / 1.5, root.height / 1.5)
        pos: (root.x + root.width / 2 - root.width / 1.5 / 2, root.y + root.height / 2 - root.height / 1.5 / 2)
